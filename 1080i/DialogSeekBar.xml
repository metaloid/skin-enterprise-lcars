<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="115">
    <defaultcontrol always="true">901</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <zorder>5</zorder>
    <include>OpenClose</include>
    <visible>![Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsActive(script-XBMC-Subtitles-main.xml)]</visible>
    <visible>Window.IsVisible(FullScreenVideo) + [Window.IsActive(videoosd.xml) | Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding | Player.Caching]</visible>
    <animation effect="fade" start="0" end="100" time="400">Visible</animation>
    <animation effect="fade" start="100" end="0" time="100">Hidden</animation>
    <controls>
            <control type="group" description="Top Bar">
                <visible>!Window.IsActive(142)</visible>
                <animation effect="fade" start="0" end="70" time="400">Visible</animation>
                <animation effect="fade" start="70" end="0" time="100">Hidden</animation>
                <top>40</top>
				<posx>60</posx>
                <control type="button"  description="Clock">
                    <label>$LOCALIZE[142] $INFO[System.Time]</label>
                </control>
				<control type="button"  description="End time">
                    <top>45</top>
                    <label>$LOCALIZE[31005]: $INFO[Player.FinishTime]</label>
                </control>
		    <control type="group" description="Icons on Seekbar">
                <top>90</top>
            <control type="button" description="Buffer icon">
                <visible>Player.Caching</visible>
                <label>BUFFERING...</label>
            </control>
            <control type="button" id="pause" >
				<visible>Player.Paused + !Player.Caching</visible>
                <label>STANDING BY</label>
			</control>
			<control type="button" description="FF">
                <visible>player.forwarding2x</visible>
                <label>2x FFW </label>
            </control>
            <control type="button" description="FFFF">
                <visible>player.forwarding4x</visible>
                <label>4x FFW</label>
            </control>
            <control type="button" description="2FFFF">
                <visible>player.forwarding8x</visible>
                <label>8x FFW</label>
            </control>
            <control type="button" description="4FFFF">
                <visible>player.forwarding16x</visible>
                <label>16x FFW</label>
            </control>
            <control type="button" description="8FFFF">
                <visible>player.forwarding32x</visible>
                <label>32x FFW</label>
            </control>
            <control type="button" description="RF">
                <visible>player.rewinding2x</visible>
                <label>2x RW</label>
            </control>
            <control type="button" description="RFFF">
                <visible>player.rewinding4x</visible>
                <label>4x RW</label>
            </control>
            <control type="button" description="2RFFF">
                <visible>player.rewinding8x</visible>
                <label>8x RW</label>
            </control>
            <control type="button" description="4RFFF">
                <visible>player.rewinding16x</visible>
                <label>16x RW</label>
            </control>
            <control type="button" description="8RFFF">
                <visible>player.rewinding32x</visible>
                <label>32x RW</label>
            </control>
            <control type="button" description="Seek time label">
                <visible>![player.forwarding | player.rewinding]</visible>
                <visible>Player.DisplayAfterSeek</visible>
				<label>$INFO[Player.SeekOffset]</label>
            </control>
			<control type="progress" id="23">
				<description>Progressbar</description>
				<posx>75</posx>
				<top>870</top>
                <width>250</width>
				<info>Player.Progress</info>
				<height>8</height>
				<texturebg>-</texturebg>
            <midtexture>-</midtexture>
            <righttexture>-</righttexture>
            <lefttexture>-</lefttexture>
			</control>
            </control>
            <control type="button" description="ptogress">
                <visible>IntegerGreaterThan(Control.GetLabel(23), 0)</visible>
                <top>135</top>
				<label>$INFO[Control.GetLabel(23), ,%]</label>
            </control>
            </control>
        <!-- 3D -->
    </controls>
</window>
