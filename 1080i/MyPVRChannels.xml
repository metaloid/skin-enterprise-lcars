<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<backgroundcolor>background</backgroundcolor>
      <views>50</views>
	<include>OpenClose</include>
    <controls>
        <control type="image">
                 <top>0</top>
                <posx>0</posx>
                <width>1920</width>
                <height>1080</height>
                <aspectratio>strech</aspectratio>
                <texture background="true" flipx="true">Lcars/lineL.png</texture>
		</control> 
		<control type="multiimage" >
			<posx>50</posx>
			<top>575</top>
            <width>300</width>
            <height>330</height>
            <imagepath>sidepanel/panel2</imagepath>
            <timeperimage>185</timeperimage>
            <fadetime>0</fadetime>
            <loop>yes</loop>
            <aspectratio>keep</aspectratio>
		</control>
		<include>WindowsTopInfos</include>
 		<control type="grouplist" id="9000">
                <width>300</width>
                <height>800</height>
                <top>110</top>
                <posx>50</posx>
				<onleft>noop</onleft>
				<onright>50</onright>
				<onup>noop</onup>
				<ondown>66</ondown>
			<control type="button" id="607">
                    	<onclick>ActivateWindow(Home)</onclick>
				<width>300</width>
				<label>Home</label>
			</control>
            <control type="button" id="28"><!--Change Channel Groups-->
					<width>300</width>
					<label>-</label>
			</control>
			<control type="button" id="3" description="Sort">
                    	<width>300</width>
			</control>
            <control type="togglebutton" id="4" description="SortOrder">
                    <width>300</width>
			       	<label>585</label>
                    <altlabel>584</altlabel>
                    <usealttexture>Container.SortDirection(Ascending)</usealttexture>
                	</control>
            <control type="togglebutton" id="699" description="Playing">
                    	<enable>Player.HasMedia</enable>
                    	<width>300</width>
						<label>$LOCALIZE[16003]</label>
                    	<altlabel>$LOCALIZE[31055]</altlabel>
                    	<usealttexture>Player.HasMedia</usealttexture>
                    	<onclick>fullscreen</onclick>
                    	<altclick>fullscreen</altclick>
            </control>
                <control type="button" id="101"><!-- Guide -->
					<description>TV Guide</description>
					<label>22020</label>
					<onclick condition="Window.IsActive(TVGuide) | Window.IsActive(RadioGuide)">NextChannelGroup</onclick>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVGuide)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioGuide)</onclick>
				</control>
				<control type="button" id="102"><!-- Recordings -->
					<width>300</width>
					<label>$LOCALIZE[19163]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvrecordings)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiorecordings)</onclick>
				</control>
				<control type="button" id="104"><!-- Search -->
					<width>300</width>
					<label>$LOCALIZE[137]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvsearch)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiosearch)</onclick>
				</control>
				<control type="button" id="103"><!-- Timers -->
					<width>300</width>
					<label>$LOCALIZE[19040]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvtimers)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiotimers)</onclick>
				</control>
            </control>
       
		<control type="group">
				<description>Small Media Window</description>
				<posx>415</posx>
				<posy>100</posy>
				<visible>Control.IsVisible(50)</visible>
			<control type="image">
				<left>5</left>
				<top>5</top>
				<width>1250</width>
				<height>385</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
                <texture diffuse="EmptyCaseMask2.png" background="true" colordiffuse="69FFFFFF" >LCARS.png</texture>
                <bordertexture  border="40">shadow.png</bordertexture>
                <bordersize>10</bordersize>
			</control>
			<control type="videowindow">
				<left>39</left>
				<top>19</top>
				<width>512</width>
				<height>351</height>
				<visible>Player.HasVideo</visible>
				<animation effect="slide" start="0,0" end="-2000,0" time="0">WindowClose</animation>
			</control>
			
					
		</control>
			<control type="spincontrolex" id="66">
				<description>Next page button</description>
				<visible>[Container(50).HasPrevious |  Container(50).HasNext]</visible>
				<onleft>noop</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>noop</ondown>
				<top>515</top>
                <posx>-15</posx>
				<width>370</width>
				<height>40</height>
                <subtype>page</subtype>
				<font>-</font>
				<textcolor>-</textcolor>
				<showonepage>false</showonepage>
				<spinwidth>150</spinwidth>
				<spinheight>40</spinheight>
				<texturenofocus></texturenofocus>
				<texturefocus></texturefocus>
				<textureup colordiffuse="buttonselect2" >down1.png</textureup>
				<texturedown colordiffuse="buttonselect2">up1.png</texturedown>
				<textureupfocus colordiffuse="buttonselect2">downp.png</textureupfocus>
				<texturedownfocus colordiffuse="buttonselect2">upp.png</texturedownfocus>
			</control>    
		<control type="group">
			<include file="View-PVR.xml">PVRListView</include>
		</control>

		
			
	</controls>
</window>
