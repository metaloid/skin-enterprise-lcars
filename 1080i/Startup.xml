<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload>AlarmClock(CloseStartup,ReplaceWindow($INFO[System.StartupWindow]),00:05,silent)</onload>
    <backgroundcolor>FF000000</backgroundcolor>
    <animation type="WindowOpen">
        <effect type="fade" start="0" end="100" time="800" delay="200" />
    </animation>
    <controls>
        <control type="image">
            <centerleft>960</centerleft>
            <centertop>540</centertop>
            <width>1920</width>
            <height>1080</height>
            <aspectratio scalediffuse="false">keep</aspectratio>
            <texture>special://skin/backgrounds/default.jpg</texture>
        </control>
		<control type="multiimage" >
            <centerleft>960</centerleft>
            <centertop>540</centertop>
            <width>1920</width>
            <height>1080</height>
            <imagepath>Screensaver/</imagepath>
            <timeperimage>35</timeperimage>
            <fadetime>0</fadetime>
            <loop>no</loop>
            <aspectratio>strech</aspectratio>
		</control>
    </controls>
</window>