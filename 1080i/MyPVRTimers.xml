<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">14</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<backgroundcolor>background</backgroundcolor>
    <views>14</views>
	<include>OpenClose</include>
	<controls>
		<control type="image">
                 <top>0</top>
                <posx>0</posx>
                <width>1920</width>
                <height>1080</height>
                <aspectratio>strech</aspectratio>
                <texture background="true" flipx="true">Lcars/lineL.png</texture>
		</control> 
		<control type="image" >
			    <posx>50</posx>
			    <top>575</top>
			    <width>300</width>
			    <height>330</height>
			    <aspectratio scalediffuse="true">keep</aspectratio>
			    <texture background="true" diffuse="EmptyCaseMask.png" >sidepanel/miss.jpg</texture>
			    <colordiffuse>ccFFFFFF</colordiffuse>
        </control>
		<include>WindowsTopInfos</include>
 			
        <control type="group">
			<posx>415</posx>
			<posy>100</posy>
			<include file="View-PVR.xml">PVRTimerListView</include>
		</control>
		<control type="grouplist" id="9000">
                <width>300</width>
                <height>800</height>
                <top>110</top>
                <posx>50</posx>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
			<control type="button" id="607">
                <onclick>ActivateWindow(Home)</onclick>
				<width>300</width>
				<label>Home</label>
			</control>
            <control type="button" id="3" description="Sort">
                    	<width>300</width>
			</control>
            <control type="togglebutton" id="4" description="SortOrder">
                    <width>300</width>
			       	<label>584</label>
                    <altlabel>585</altlabel>
                    <usealttexture>Container.SortDirection(Ascending)</usealttexture>
            </control>
			<control type="button" id="28"><!--Change Channel Groups-->
					<width>300</width>
					<label>-</label>
			</control>
			<control type="togglebutton" id="699" description="Playing">
                    	<enable>Player.HasMedia</enable>
                    	<width>300</width>
						<label>$LOCALIZE[16003]</label>
                    	<altlabel>$LOCALIZE[31055]</altlabel>
                    	<usealttexture>Player.HasMedia</usealttexture>
                    	<onclick>fullscreen</onclick>
                    	<altclick>fullscreen</altclick>
            </control>
				<control type="button" id="901"><!-- Channels -->
					<width>300</width>
					<label>$LOCALIZE[19019]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvchannels)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiochannels)</onclick>
				</control>
				<control type="button" id="902"><!-- Guide -->
					<label>$LOCALIZE[22020]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvguide)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radioguide)</onclick>
				</control>
				<control type="button" id="903"><!-- Recordings -->
					<label>$LOCALIZE[19163]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVRecordings)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioRecordings)</onclick>
				</control>
				<control type="button" id="904"><!-- Search -->
					<label>$LOCALIZE[137]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVSearch)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioSearch)</onclick>
				</control>
			</control>
		
	</controls>
</window>
