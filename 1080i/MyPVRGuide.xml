<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<backgroundcolor>background</backgroundcolor>
    <views>10</views>
	<include>OpenClose</include>
	<controls>
		<control type="image">
            <top>0</top>
            <posx>0</posx>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>strech</aspectratio>
            <texture background="true" flipx="true">Lcars/lineL.png</texture>
		</control> 
		<control type="multiimage" >
			<posx>50</posx>
			<top>575</top>
            <width>300</width>
            <height>330</height>
            <imagepath>panel1</imagepath>
            <timeperimage>600</timeperimage>
            <fadetime>0</fadetime>
            <loop>yes</loop>
            <aspectratio>keep</aspectratio>
		</control>
		<include>WindowsTopInfos</include>
 		<control type="group">
			<posx>415</posx>
			<posy>100</posy>
			<include file="View-PVR.xml">PVRTimelineView</include>
		</control>
		<control type="grouplist" id="9000">
            <width>300</width>
            <height>800</height>
            <top>110</top>
            <posx>50</posx>
			<onleft>10</onleft>
			<onright>10</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<include>PvrLcarsB</include>
            <control type="button" id="222">
                <description>Fullscreen As button</description>
				<width>300</width>
                <label>Fullscreen</label>
                <visible>Player.HasMedia</visible>
                <onclick>fullscreen</onclick>
            </control>
		</control>
	</controls>
</window>
