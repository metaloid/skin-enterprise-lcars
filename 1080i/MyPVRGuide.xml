<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<backgroundcolor>background</backgroundcolor>
    <views>10</views>
	<include>OpenClose</include>
	<controls>
		<control type="image">
                 <top>0</top>
                <posx>0</posx>
                <width>1920</width>
                <height>1080</height>
                <aspectratio>strech</aspectratio>
                <texture background="true" flipx="true">Lcars/lineL.png</texture>
		</control> 
		<control type="multiimage" >
			<posx>50</posx>
			<top>575</top>
            <width>300</width>
            <height>330</height>
            <imagepath>sidepanel/panel1</imagepath>
            <timeperimage>185</timeperimage>
            <fadetime>0</fadetime>
            <loop>yes</loop>
            <aspectratio>keep</aspectratio>
		</control>
		<include>WindowsTopInfos</include>
 		<control type="group">
			<posx>415</posx>
			<posy>100</posy>
			<include file="View-PVR.xml">PVRTimelineView</include>
			
		</control>
		
 		
		<control type="grouplist" id="9000">
                <width>300</width>
                <height>800</height>
                <top>110</top>
                <posx>50</posx>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
			<control type="button" id="607">
                <onclick>ActivateWindow(Home)</onclick>
				<width>300</width>
				<label>Home</label>
			</control>
            <control type="button" id="28"><!--Change Channel Groups-->
					<width>300</width>
					<label>-</label>
			</control>
			<control type="togglebutton" id="699" description="Playing">
                    	<enable>Player.HasMedia</enable>
                    	<width>300</width>
						<label>$LOCALIZE[16003]</label>
                    	<altlabel>$LOCALIZE[31055]</altlabel>
                    	<usealttexture>Player.HasMedia</usealttexture>
                    	<onclick>fullscreen</onclick>
                    	<altclick>fullscreen</altclick>
            </control>
				<control type="button" id="901"><!-- Channels -->
					<width>300</width>
					<label>$LOCALIZE[19019]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvchannels)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiochannels)</onclick>
				</control>
				<control type="button" id="903"><!-- Recordings -->
					<width>300</width>
					<label>$LOCALIZE[19163]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvrecordings)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiorecordings)</onclick>
				</control>
				<control type="button" id="904"><!-- Search -->
					<width>300</width>
					<label>$LOCALIZE[137]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvsearch)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiosearch)</onclick>
				</control>
				<control type="button" id="905"><!-- Timers -->
					<width>300</width>
					<label>$LOCALIZE[19040]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvtimers)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiotimers)</onclick>
				</control>
			</control>
			<control type="spincontrolex" id="66">
				<description>Next page button</description>
				<onleft>noop</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>noop</ondown>
				<top>515</top>
                <posx>-15</posx>
				<width>370</width>
				<height>40</height>
                <subtype>page</subtype>
				<font>-</font>
				<textcolor>-</textcolor>
				<showonepage>false</showonepage>
				<spinwidth>150</spinwidth>
				<spinheight>40</spinheight>
				<texturenofocus></texturenofocus>
				<texturefocus></texturefocus>
				<textureup colordiffuse="buttonselect2" >down1.png</textureup>
				<texturedown colordiffuse="buttonselect2">up1.png</texturedown>
				<textureupfocus colordiffuse="buttonselect2">downp.png</textureupfocus>
				<texturedownfocus colordiffuse="buttonselect2">upp.png</texturedownfocus>
			</control>    
		
	</controls>
</window>
