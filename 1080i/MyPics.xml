<?xml version="1.0" encoding="UTF-8"?>
<window id="2">
    <defaultcontrol always="true">504</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>Black</backgroundcolor>
    <views>504</views>
	<include>OpenClose</include>
	<controls>
        <include>Backgroundcolor</include>
        <control type="image">
            <top>0</top>
            <posx>0</posx>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>strech</aspectratio>
            <texture background="true" flipx="true">Lcars/lineL.png</texture>
		</control> 
		<control type="multiimage" >
			<posx>50</posx>
			<top>575</top>
            <width>300</width>
            <height>330</height>
            <imagepath>panel2</imagepath>
            <timeperimage>600</timeperimage>
            <fadetime>0</fadetime>
            <loop>yes</loop>
            <aspectratio>keep</aspectratio>
		</control>
		<control type="panel" id="504">
			<posx>430</posx>
			<posy>90</posy>
			<width>1300</width>
			<height>850</height>
			<onup>504</onup>
			<ondown>504</ondown>
			<onright>noop</onright>
			<onleft>6000</onleft>
		    <viewtype label="504">VideoLcars</viewtype>
			<pagecontrol>66</pagecontrol>
			<scrolltime tween="sine" easing="inout">300</scrolltime>
			<preloaditems>8</preloaditems>
			<orientation>horizontal</orientation>
			<include>SquareIconLcars</include>
		</control>
        <include>WindowsTopInfos</include>
        <control type="grouplist" id="9000">
            <width>300</width>
            <height>800</height>
            <top>110</top>
            <posx>50</posx>
			<onleft>noop</onleft>
			<onright>6000</onright>
			<onup>noop</onup>
		    <ondown>noop</ondown>
			<control type="button" id="607">
                <onclick>ActivateWindow(Home)</onclick>
				<width>300</width>
				<label>Home</label>
				<texturenofocus colordiffuse="$VAR[butcolor1]" border="20">whiteallrounded.png</texturenofocus>
			</control>
            <control type="button" id="677">
                <onclick>back</onclick>
				<width>300</width>
				<label>Back</label>
				<texturenofocus colordiffuse="$VAR[butcolor1]" border="20">whiteallrounded.png</texturenofocus>
			</control>   
				<control type="button" id="3">
				<description>Sort by button</description>
				<label>103</label>
				<texturenofocus colordiffuse="$VAR[butcolor1]" border="20">whiteallrounded.png</texturenofocus>
			</control>
			<control type="togglebutton" id="4" description="SortOrder">
                <width>300</width>
				<label>585</label>
                <altlabel>584</altlabel>
                <usealttexture>Container.SortDirection(Ascending)</usealttexture>
				<texturenofocus colordiffuse="$VAR[butcolor2]" border="20">whiteallrounded.png</texturenofocus>
            </control>
            <control type="button" id="6" description="Slideshow">
                <disabledcolor>Disabled</disabledcolor>
                <width>300</width>
				<label>108</label>
                <visible>!ListItem.IsFolder</visible>
				<texturenofocus colordiffuse="$VAR[butcolor2]" border="20">whiteallrounded.png</texturenofocus>
            </control>
            <control type="button" id="7" description="Recursive slideshow">
                <disabledcolor>Disabled</disabledcolor>
                <width>300</width>
				<label>13318</label>
                <visible>ListItem.IsFolder</visible>
				<texturenofocus colordiffuse="$VAR[butcolor2]" border="20">whiteallrounded.png</texturenofocus>
            </control>
            <control type="radiobutton" id="9" description="Randomize">
                <width>300</width>
				<include>Keyboardbuttons</include>
				<label>13319</label>
				<texturenofocus colordiffuse="$VAR[butcolor3]" border="20">whiteallrounded.png</texturenofocus>
            </control>
            <control type="edit" id="19">
				<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
				<description>Filter</description>
				<height>40</height>
				<width>300</width>
				<textwidth>230</textwidth>
				<label>587</label>
				<texturenofocus colordiffuse="$VAR[butcolor3]" border="20">whiteallrounded.png</texturenofocus>
				<texturefocus colordiffuse="White" border="20">whiteallrounded.png</texturefocus>
				<textcolor>Black</textcolor>
				<focusedcolor>Black</focusedcolor>
				<selectedcolor>Black</selectedcolor>
			</control>
			<control type="togglebutton" id="699" description="Playing">
                <visible>Player.HasMedia</visible>
                <width>300</width>
				<texturenofocus colordiffuse="$VAR[butcolor3]" border="20">whiteallrounded.png</texturenofocus>
				<include>Keyboardbuttons</include>
				<label>$LOCALIZE[16003]</label>
                <altlabel>$LOCALIZE[31055]</altlabel>
                <usealttexture>Player.HasMedia</usealttexture>
                <onclick>fullscreen</onclick>
                <altclick>fullscreen</altclick>
                <animation effect="fade" start="100" end="60" time="100" condition="!Player.HasMedia">Conditional</animation>
            </control>
			<control type="spincontrolex" id="66">
				<description>Next page button</description>
				<visible>[Container(504).HasPrevious |  Container(504).HasNext]</visible>
				<width>307</width>
                <subtype>page</subtype>
				<font>-</font>
				<textcolor>-</textcolor>
				<showonepage>false</showonepage>
				<spinwidth>150</spinwidth>
				<spinheight>40</spinheight>
				<texturenofocus></texturenofocus>
				<texturefocus></texturefocus>
				<textureup colordiffuse="$VAR[butcolor4]" >left.png</textureup>
				<texturedown colordiffuse="$VAR[butcolor4]">right.png</texturedown>
				<textureupfocus colordiffuse="$VAR[butcolor4]">leftp.png</textureupfocus>
				<texturedownfocus colordiffuse="$VAR[butcolor4]">rightp.png</texturedownfocus>
			</control>    
		</control>
    </controls>
</window>
