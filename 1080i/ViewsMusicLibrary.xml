            </itemlayout>
            <focusedlayout  height="50" width="260">
                <control type="image" description="THMBSBASECOLOR">
                    <posx>0</posx>
                    <width>250</width>
                    <height>40</height>
					<texture colordiffuse="White" border="40">whiteallrounded.png</texture>
                </control>
				<control type="label">
                    <left>10</left>
                    <top>12</top>
                    <width>230</width>
                    <height>20</height>
					<textcolor>Black</textcolor>
                    <aligny>center</aligny>
					<font>LCARS20</font>
                    <align>center</align>
                    <scroll>false</scroll>
				    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
		</control>
        <control type="panel" id="503">
          <visible>Container.Content(years)</visible>
		  <include>YearsLcars</include>
        </control>
            <control type="image">
			<visible>[Container.Content(artists) ]+ !StringCompare(ListItem.Label,..)</visible>
