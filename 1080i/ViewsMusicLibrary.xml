				<posy>530</posy>
				<width>475</width>
				<height>475</height>
				<texture diffuse="poster-mask.png">$INFO[Container(54).ListItem.icon]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<bordertexture  border="20">shadow.png</bordertexture>
				<bordersize>10</bordersize>
            </control>
			<control type="label">
			<visible>[Container.Content(genres) | Container.Content(artists)] + !StringCompare(ListItem.Label,..)</visible>
