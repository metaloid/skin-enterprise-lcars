<?xml version="1.0" encoding="UTF-8"?>
<window id="12">
    <defaultcontrol always="true">3</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>Black</backgroundcolor>
	<!--include>OpenClose</include-->
    <controls>
        <include>Backgroundcolor</include>
		<control type="image">
            <top>0</top>
            <posx>0</posx>
            <width>455</width>
            <height>1050</height>
            <aspectratio>strech</aspectratio>
            <texture background="true" >Lcars/lineR.png</texture>
		</control> 
		<control type="image">
            <top>0</top>
            <posx>455</posx>
            <width>1464</width>
            <height>1050</height>
            <aspectratio>strech</aspectratio>
            <texture  background="true" >Lcars/lineL.png</texture>
	    </control>
        <control type="label" id="6">
            <top>-500</top>
            <width>0</width>
            <height>0</height>
            <font>LCARS24</font>
        </control>
        <control type="grouplist" description="LCARS">
            <top>50</top>
            <posx>50</posx>
			<width>300</width>
            <height>60</height>
            <align>center</align>
            <orientation>horizontal</orientation>
            <control type="label" id="2" description="Heading">
                <width>auto</width>
                <height>60</height>
                <font>LCARS20</font>
                <scroll>false</scroll>
                <textcolor>HellOrange</textcolor>
				<label>$VAR[RootLabel]</label>
            </control>
		</control>
        <control type="grouplist" id="3" description="TopMenu">
            <width>280</width>
            <height>750</height>
            <top>120</top>
            <posx>70</posx>
		    <itemgap>10</itemgap>
            <onup>noop</onup>
            <ondown>9000</ondown>
            <onright>5</onright>
            <onleft>5</onleft>	  
        </control>
        <control type="grouplist" id="5" description="Stage">
            <top>80</top>
            <left>650</left>
            <width>800</width>
            <height>900</height>
            <onright>60</onright>
            <onup>5</onup>
            <ondown>5</ondown>
            <onleft>3</onleft>
            <orientation>vertical</orientation>
            <itemgap>10</itemgap>
        </control>
		<control type="button" id="7" description="Button">
            <description>Default Button</description>
            <height>40</height>
            <width>300</width>
            <font>LCARS20</font>
            <align>left</align>
			<textoffsetx>7</textoffsetx>
			<invalidcolor>invalid</invalidcolor>
            <texturenofocus colordiffuse="HellOrange" border="20">whiterounded.png</texturenofocus>
            <texturefocus colordiffuse="White" border="20">whiterounded.png</texturefocus>
        </control>
        <control type="radiobutton" id="8" description="Radio Button">
            <width>300</width>
            <height>40</height>
            <radioposx>0</radioposx>
            <font>LCARS20</font>
            <align>left</align>
        </control>
        <control type="spincontrolex" id="9" description="Spin control">
            <width>820</width>
            <height>40</height>
            <align>left</align>
            <font>LCARS20</font>
        </control>
        <control type="button" id="10" description="Category Button">
            <width>270</width>
            <textoffsetx>75</textoffsetx>
			<textwidth>180</textwidth>
			<texturenofocus colordiffuse="$VAR[butcolor3]" >whiteallrounded2.png</texturenofocus>
			<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
			<align>left</align>
            <aligny>top</aligny>
        </control>
        <control type="grouplist" id="9000">
            <width>320</width>
            <height>300</height>
            <top>620</top>
            <posx>70</posx>
		    <itemgap>10</itemgap>
            <ondown>noop</ondown>
			<onup>3</onup>
			<orientation>vertical</orientation>
			<control type="button" id="20">
                <description>Setting level button</description>
                <textoffsetx>75</textoffsetx>
				<height>40</height>
				<align>LEFT</align>
				<texturenofocus colordiffuse="$VAR[butcolor4]" >whiteallrounded2.png</texturenofocus>
				<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
				<width>270</width>
           		<onclick>SettingsLevelChange</onclick>
            </control>
			<control type="button" description="Battery" id="22">
                <visible>IntegerGreaterThan(System.BatteryLevel,0)</visible>
                <label>$INFO[System.BatteryLevel,pwr ]</label>
				<texturenofocus colordiffuse="$VAR[Battery]" >whiteallrounded2.png</texturenofocus>
				<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
				<width>270</width>
				<align>LEFT</align>
				<textoffsetx>75</textoffsetx>
            </control>
			<control type="button" description="Clock" id="23">
                <visible>!Skin.HasSetting(HideClock)</visible>
                <label>$INFO[System.Time]</label>
				<texturenofocus colordiffuse="$VAR[butcolor4]" >whiteallrounded2.png</texturenofocus>
				<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
				<width>270</width>
				<align>LEFT</align>
				<textoffsetx>75</textoffsetx>
            </control>
            <control type="button" id="24">
                <onclick>ActivateWindow(Home)</onclick>
				<texturenofocus colordiffuse="$VAR[butcolor4]" >whiteallrounded2.png</texturenofocus>
				<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
				<width>270</width>
				<align>LEFT</align>
				<textoffsetx>75</textoffsetx>
				<label>Home</label>
			</control>
        	<control type="button" id="25">
                <onclick>back</onclick>
				<texturenofocus colordiffuse="$VAR[butcolor4]" >whiteallrounded2.png</texturenofocus>
				<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
				<width>270</width>
				<align>LEFT</align>
				<textoffsetx>75</textoffsetx>
				<label>Back</label>
			</control>   
		</control>
        <control type="group">
            <visible>!SubString(Control.GetLabel(6),No info) + !Control.HasFocus(20)</visible>
            <control type="textbox" id="90">
				<left>1500</left>
				<top>80</top>
				<aligny>top</aligny>
				<width>350</width>
                <height>800</height>
                <font>LCARS20</font>
                <label>$INFO[Control.GetLabel(6)]</label>
                <align>left</align>
            </control>
        </control>
    </controls>
</window>
