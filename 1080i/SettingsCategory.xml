<?xml version="1.0" encoding="UTF-8"?>
<window id="12">
    <defaultcontrol always="true">3</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>Black</backgroundcolor>
		<include>OpenClose</include>
    <controls>
        <include>Backgroundcolor</include>
		<control type="image">
                <top>0</top>
                <posx>0</posx>
                <width>455</width>
                <height>970</height>
                <aspectratio>strech</aspectratio>
                <texture background="true" >Lcars/lineR.png</texture>
		</control> 
		<control type="image">
                <top>0</top>
                <posx>455</posx>
                <width>1464</width>
                <height>970</height>
                <aspectratio>strech</aspectratio>
                <texture  background="true" >Lcars/lineL.png</texture>
	     </control>
		<control type="grouplist">
			<top>980</top>
            <posx>70</posx>
			<align>left</align>
            <orientation>horizontal</orientation>
            <itemgap>10</itemgap>
			<control type="button" description="WebLink">
                <visible>!Skin.HasSetting(hideconnection)</visible>
                <width>250</width>
                <label>$INFO[Network.IPAddress,IP: ]</label>
            </control>
			<control type="button" description="cputemp">
			<visible>!Skin.HasSetting(hidecpu) + System.Platform.Linux.RaspberryPi</visible>
            <width>250</width>
                <label>$INFO[System.CPUTemperature,$LOCALIZE[140] ]</label>
            </control>
			<control type="button" description="Clock">
                <visible>!Skin.HasSetting(HideClock)</visible>
                <label>$INFO[System.Time]</label>
				<width>250</width>
            </control>
			<control type="button" description="Battery">
                <visible>IntegerGreaterThan(System.BatteryLevel,0)</visible>
                <label>Power Level $INFO[System.BatteryLevel]</label>
			    <texturenofocus colordiffuse="$VAR[Battery]" border="20">whiteallrounded.png</texturenofocus>
				<width>250</width>
            </control>
			<control type="spincontrolex" id="66">
				<description>Next page button</description>
				<visible>[Container(5).HasPrevious |  Container(5).HasNext]</visible>
				<onleft>noop</onleft>
				<onright>5</onright>
				<onup>555</onup>
				<ondown>noop</ondown>
				<width>260</width>
				<height>40</height>
                <subtype>page</subtype>
				<font>-</font>
				<textcolor>-</textcolor>
				<showonepage>false</showonepage>
				<spinwidth>125</spinwidth>
				<spinheight>40</spinheight>
				<texturenofocus></texturenofocus>
				<texturefocus></texturefocus>
				<textureup colordiffuse="HellOrange" >down1.png</textureup>
				<texturedown colordiffuse="HellOrange">up1.png</texturedown>
				<textureupfocus colordiffuse="HellOrange">downp.png</textureupfocus>
				<texturedownfocus colordiffuse="HellOrange">upp.png</texturedownfocus>
			</control>    
		</control>		
        <control type="label" id="6">
            <top>-500</top>
            <width>0</width>
            <height>0</height>
            <font>LCARS24</font>
        </control>
        
        <control type="label" id="2" description="Heading">
            <width>280</width>
            <posx>70</posx>
		    <top>850</top>
        	<textcolor>white</textcolor>
            <font>LCARS24</font>
            <align>center</align>
            <label>-</label>
        </control>
        <control type="grouplist" id="3" description="TopMenu">
            <width>280</width>
            <height>750</height>
            <top>120</top>
            <posx>70</posx>
		    <itemgap>10</itemgap>
            <onup>noop</onup>
            <ondown>555</ondown>
            <onright>5</onright>
            <onleft>5</onleft>	  
        </control>
        <control type="grouplist" id="5" description="Stage">
            <top>80</top>
            <left>760</left>
            <width>800</width>
            <height>770</height>
            <onright>60</onright>
            <onup>5</onup>
            <ondown>5</ondown>
            <onleft>3</onleft>
            <pagecontrol>66</pagecontrol>
            <orientation>vertical</orientation>
            <itemgap>10</itemgap>
        </control>
        
	  <control type="button" id="7" description="Button">
            <description>Default Button</description>
            <height>40</height>
            <width>300</width>
            <font>LCARS20</font>
            <align>left</align>
			<textoffsetx>7</textoffsetx>
			<invalidcolor>invalid</invalidcolor>
            <texturenofocus colordiffuse="HellOrange" border="20">whiterounded.png</texturenofocus>
            <texturefocus colordiffuse="White" border="20">whiterounded.png</texturefocus>
         </control>
        <control type="radiobutton" id="8" description="Radio Button">
            <width>300</width>
            <height>40</height>
            <radioposx>0</radioposx>
            <font>LCARS20</font>
            <align>left</align>
        </control>
        <control type="spincontrolex" id="9" description="Spin control">
            <width>820</width>
            <height>40</height>
            <align>left</align>
            <font>LCARS20</font>
            
        </control>
        <control type="button" id="10" description="Category Button">
            <width>270</width>
            <textoffsetx>75</textoffsetx>
			<textwidth>180</textwidth>
			<texturenofocus colordiffuse="HellOrange" >whiteallrounded2.png</texturenofocus>
			<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
			<align>LEFT</align>
            <aligny>center</aligny>
        </control>
        <control type="grouplist" id="555">
            <width>320</width>
            <height>300</height>
            <top>620</top>
            <posx>70</posx>
		    <itemgap>10</itemgap>
            <ondown>66</ondown>
			<onup>3</onup>
			<orientation>vertical</orientation>
            <control type="button" id="607">
                <onclick>ActivateWindow(Home)</onclick>
				<texturenofocus colordiffuse="HellOrange" >whiteallrounded2.png</texturenofocus>
				<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
				<width>270</width>
				<align>LEFT</align>
				<textoffsetx>75</textoffsetx>
				<label>Home</label>
			</control>
        	<control type="button" id="677">
                <onclick>back</onclick>
				<texturenofocus colordiffuse="HellOrange" >whiteallrounded2.png</texturenofocus>
				<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
				<width>270</width>
				<align>LEFT</align>
				<textoffsetx>75</textoffsetx>
				<label>Back</label>
			</control>   
			<control type="button" id="20">
                <description>Setting level button</description>
                <textoffsetx>75</textoffsetx>
				<height>40</height>
				<align>LEFT</align>
				<texturenofocus colordiffuse="HellOrange" >whiteallrounded2.png</texturenofocus>
				<texturefocus colordiffuse="White" >whiteallrounded2.png</texturefocus>
				<width>270</width>
           		<onclick>SettingsLevelChange</onclick>
            </control>
	  </control>
        <control type="group">
            <visible>!SubString(Control.GetLabel(6),No info) + !Control.HasFocus(20)</visible>
            <control type="textbox" id="90">
            <left>760</left>
            <top>850</top>
            <aligny>top</aligny>
            <align>center</align>
            <width>800</width>
                <height>80</height>
                <font>LCARS20</font>
                <label>$INFO[Control.GetLabel(6)]</label>
                <align>justify</align>
            </control>
        </control>
    </controls>
</window>
