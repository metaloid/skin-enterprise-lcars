<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="ThumbnailView">
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<control type="panel" id="500">
				<left>80</left>
				<top>50</top>
				<width>680</width>
				<height>560</height>
				<onleft>2</onleft>
				<onright>60</onright>
				<onup>500</onup>
				<ondown>500</ondown>
				<viewtype label="21371">panel</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<preloaditems>4</preloaditems>
				
				<itemlayout height="279" width="210">
					<control type="image">
						<left>1</left>
						<top>0</top>
						<width>208</width>
						<height>240</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture  diffuse="poster-mask.png"  background="true" fallback="04.png">$VAR[PosterThumb]</texture>
						<bordertexture colordiffuse="blue">poster-mask.png</bordertexture>
						<bordersize>4</bordersize>
					</control>
					<control type="label">
						<left>4</left>
						<top>240</top>
						<width>200</width>
						<height>25</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<info>ListItem.Label</info>
					</control>
					<control type="image">
						<left>10</left>
						<top>205</top>
						<width>40</width>
						<height>26</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Overlay]</texture>
					</control>
					<control type="image">
						<visible>!StringCompare(listitem.label,get more...)</visible>
						<left>10</left>
						<top>10</top>
						<width>40</width>
						<height>26</height>
						<texture>$VAR[MediaInfoOverlayVar]</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="276" width="210">
					<control type="image">
						<left>1</left>
						<top>0</top>
						<width>208</width>
						<height>240</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture  diffuse="poster-mask.png"  background="true" fallback="04.png">$VAR[PosterThumb]</texture>
						<bordertexture colordiffuse="red">poster-mask.png</bordertexture>
						<bordersize>4</bordersize>
					</control>
					<control type="label">
						<left>4</left>
						<top>240</top>
						<width>200</width>
						<height>25</height>
						<font>font13</font>
						<textcolor>blue</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<info>ListItem.Label</info>
					</control>
					<control type="image">
						<left>10</left>
						<top>205</top>
						<width>40</width>
						<height>26</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Overlay]</texture>
					</control>
					<control type="image">
						<visible>!StringCompare(listitem.label,get more...)</visible>
						<left>10</left>
						<top>10</top>
						<width>40</width>
						<height>26</height>
						<texture>$VAR[MediaInfoOverlayVar]</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</focusedlayout>
			</control>
					<control type="textbox">
                    <visible>!StringCompare(listitem.label,..)</visible>
						<description>Description Value for Movie</description>
						<left>745</left>
						<top>315</top>
						<width>240</width>
						<height>290</height>
						<font>font13</font>
						<align>justify</align>
						<textcolor>white</textcolor>
						<label>$INFO[Container(500).ListItem.Plot]</label>
						<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
					</control>
			<control type="scrollbar" id="60">
				<left>710</left>
				<top>65</top>
				<width>25</width>
				<height>535</height>
				<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="2,16,2,16">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="2,16,2,16">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onleft>500</onleft>
				<onright>9000</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>Control.IsVisible(500)</visible>
			</control>
		</control>
	</include>

</includes>
