<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="CommonBackground">
		<control type="image">
			<description>Normal Default Background Image</description>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<aspectratio>strech</aspectratio>
			<texture>03.png</texture>
		</control>
		<control type="grouplist">
			<left>100</left>
            <top>630</top>
            <width>1000</width>
			<height>30</height>
			<orientation>horizontal</orientation>
			<align>left</align>
			<itemgap>10</itemgap>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[Window.Property(Movies.Count),, $LOCALIZE[342] ]</label>
				<visible>!Skin.HasSetting(HomeMenuNoMovieButton)</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[Window.Property(TVShows.Count),, $LOCALIZE[20343] ]</label>
				<visible>!Skin.HasSetting(HomeMenuNoTVShowButton)</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[Window.Property(Music.SongsCount),, $LOCALIZE[134] ]</label>
				<visible>!Skin.HasSetting(HomeMenuNoMusicButton)</visible>
			</control>
		</control>
		<control type="grouplist">
			<top>610</top>
			<left>100</left>
			<width>1000</width>
			<height>30</height>
			<orientation>horizontal</orientation>
			<align>left</align>
			<itemgap>10</itemgap>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>SYSTEM ONLINE</label>
				<visible>!IsEmpty(network.ipaddress)</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[network.ipaddress]</label>
				<visible>system.hasnetwork</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[System.BatteryLevel, POWER LEVEL : ]</label>
				<visible>IntegerGreaterThan(System.BatteryLevel,0)</visible>
			</control>
		</control>
	</include>
	<include name="ContentPanelBackgrounds">
		<control type="image">
			<description>Normal Default Background Image</description>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<aspectratio>strech</aspectratio>
			<texture>02.png</texture>
		</control>
		<control type="grouplist">
			<top>610</top>
			<left>100</left>
			<width>1000</width>
			<height>30</height>
			<orientation>horizontal</orientation>
			<align>left</align>
			<itemgap>10</itemgap>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>SYSTEM ONLINE</label>
				<visible>!IsEmpty(network.ipaddress)</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[network.ipaddress]</label>
				<visible>system.hasnetwork</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[System.BatteryLevel, POWER LEVEL : ]</label>
				<visible>IntegerGreaterThan(System.BatteryLevel,0)</visible>
			</control>
		</control>
	</include>
</includes>
