<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="CommonBackground1">
		<control type="image">
			<description>Normal Default Background Image</description>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<aspectratio>strech</aspectratio>
			<texture>03.png</texture>
		</control>
		<control type="image">
			<left>90</left>
			<top>65</top>
			<width>620</width>
			<height>480</height>
			<aspectratio>keep</aspectratio>
			<colordiffuse>22ffffff</colordiffuse>
			<texture background="true">04.png</texture>
		</control>
	</include>
	<include name="CommonBackground">
		<control type="image">
			<description>Normal Default Background Image</description>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<aspectratio>strech</aspectratio>
			<texture>03.png</texture>
		</control>
		<control type="image">
			<left>90</left>
			<top>65</top>
			<width>620</width>
			<height>480</height>
			<aspectratio>keep</aspectratio>
			<colordiffuse>22ffffff</colordiffuse>
			<texture background="true">04.png</texture>
		</control>
		<control type="image">
			<left>730</left>
			<top>35</top>
			<width>265</width>
			<height>275</height>
			<texture border="5" colordiffuse="blue">folder-focus.png</texture>
			<visible>[Player.HasVideo + !Window.IsVisible(TVChannels) + !Window.IsVisible(RadioChannels)]  | Player.HasAudio</visible>
		</control>
		<control type="visualisation" id ="3">>
			<left>735</left>
			<top>40</top>
			<width>255</width>
			<height>265</height>
			<visible>Player.HasAudio</visible>
			<visible>IsEmpty(Window(videolibrary).Property(PlayingBackgroundMedia))</visible>
		</control>
		<control type="image">
			<left>735</left>
			<top>40</top>
			<width>255</width>
			<height>265</height>
			<aspectratio scalediffuse="false">scale</aspectratio>
			<texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
			<colordiffuse>55FFFFFF</colordiffuse>
			<visible>Player.HasAudio</visible>
		</control>
		<control type="videowindow" id="2">
			<left>735</left>
			<top>40</top>
			<width>255</width>
			<height>265</height>
			<visible>Player.HasVideo + !Window.IsVisible(TVChannels) + !Window.IsVisible(RadioChannels)</visible>
		</control>
		<!-- onscreen Info -->
		<control type="label">
			<description>Current Video label</description>
			<left>735</left>
			<top>280</top>
			<width>255</width>
			<height>35</height>
			<font>font12</font>
			<textcolor>white</textcolor>
			<align>center</align>
			<aligny>center</aligny>
			<label>$INFO[Player.Title]</label>
			<visible>Player.HasVideo | Player.HasAudio</visible>
		</control>
		<control type="grouplist">
			<top>610</top>
			<left>100</left>
			<width>400</width>
			<height>40</height>
			<orientation>horizontal</orientation>
			<align>left</align>
			<itemgap>2</itemgap>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>SYSTEM OFFLINE</label>
				<visible>IsEmpty(network.ipaddress)</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[network.ipaddress,SYSTEM ONLINE ]</label>
				<visible>system.hasnetwork</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[System.BatteryLevel, POWER LEVEL : ]</label>
				<visible>IntegerGreaterThan(System.BatteryLevel,0)</visible>
			</control>
		</control>
	</include>
	<include name="wbg">
				<control type="group">
					<left>1015</left>
                    <top>600</top>
				<control type="image">
					<description>Weather image</description>
					<left>170</left>
					<top>30</top>
					<width>60</width>
					<height>60</height>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[Weather.Conditions]</texture>
				</control>
				<control type="label">
					<description>Location label</description>
					<left>65</left>
					<top>5</top>
					<width>500</width>
					<height>15</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font10</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[Window(Weather).Property(Location)]</label>
				</control>
				<control type="grouplist">
					<left>65</left>
					<top>20</top>
					<width>1000</width>
					<height>30</height>
					<orientation>horizontal</orientation>
					<align>left</align>
					<itemgap>0</itemgap>
					<control type="label">
						<description>Temp label</description>
						<width min="0" max="300">auto</width>
						<height>30</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>font28_title</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>[B]$INFO[Window(Weather).Property(Current.Temperature)][/B]</label>
					</control>
					<control type="label">
						<description>Temp Units</description>
						<width min="0" max="100">auto</width>
						<height>22</height>
						<font>font10</font>
						<aligny>center</aligny>
						<label>$INFO[System.TemperatureUnits]</label>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<visible>!IsEmpty(Window(Weather).Property(Current.Temperature))</visible>
					</control>
					<control type="label">
						<description>Conditions Label</description>
						<width>500</width>
						<height>22</height>
						<font>font10</font>
						<aligny>center</aligny>
						<label>$INFO[Window(Weather).Property(Current.Condition),  ]</label>
						<textcolor>grey2</textcolor>
						<shadowcolor>black</shadowcolor>
					</control>
				</control>
				</control>
	</include>
</includes>
