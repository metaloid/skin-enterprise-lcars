<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="ProgsView">
		<control type="group">
			<visible>Control.IsVisible(600)</visible>
			<control type="panel" id="600">
				<left>80</left>
				<top>50</top>
				<width>630</width>
				<height>540</height>
				<onleft>9000</onleft>
				<onright>60</onright>
				<onup>600</onup>
				<ondown>600</ondown>
				<viewtype label="List">panel</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
        		<orientation>vertical</orientation>
				<itemlayout height="55" width="640">
					<control type="image">
						<left>3</left>
						<top>0</top>
						<width>30</width>
						<height>50</height>
						<align>center</align>
						<aspectratio scalediffuse="false" aligny="top" >scale</aspectratio>
						<texture background="true" fallback="defaultmis.png">$VAR[PosterThumb]</texture>
						<bordertexture colordiffuse="blue">folder-focus.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
					<control type="label">
						<left>40</left>
						<width min="0" max="475">auto</width>
						<font>font16</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
                    <control type="label">
						<visible>!StringCompare(listitem.label,..)</visible>
                        <left>530</left>
                        <top>20</top>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
				</itemlayout>
				<focusedlayout height="55" width="620">
                    <control type="image">
						<top>11</top>
						<height>33</height>
						<width>640</width>
						<aligny>center</aligny>
						<aspectratio>strech</aspectratio>
						<texture colordiffuse="blue">button-focus.png</texture>
                    </control>
					<control type="image">
						<left>3</left>
						<width>30</width>
						<height>50</height>
						<align>center</align>
						<aspectratio scalediffuse="false" aligny="top" >scale</aspectratio>
						<texture background="true" fallback="defaultmis.png">$VAR[PosterThumb]</texture>
						<bordertexture colordiffuse="blue">folder-focus.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
					<control type="label">
						<left>40</left>
						<width min="0" max="475">auto</width>
						<font>font16</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
                    <control type="label">
						<visible>!StringCompare(listitem.label,..)</visible>
                        <left>530</left>
                        <top>20</top>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
				</focusedlayout>
			</control>
					<control type="textbox">
                    <visible>!StringCompare(listitem.label,..)</visible>
                    <visible>Control.HasFocus(600)</visible>
						<description>Description Value for Movie</description>
						<left>745</left>
						<top>315</top>
						<width>240</width>
						<height>290</height>
						<font>font13</font>
						<align>justify</align>
						<textcolor>white</textcolor>
						<label>$VAR[Plots]</label>
						<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
					</control>
			<control type="scrollbar" id="60">
				<left>710</left>
				<top>65</top>
				<width>25</width>
				<height>535</height>
				<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="2,16,2,16">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="2,16,2,16">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onleft>600</onleft>
				<onright>9000</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>Control.IsVisible(600)</visible>
			</control>
		</control>
	</include>

</includes>
