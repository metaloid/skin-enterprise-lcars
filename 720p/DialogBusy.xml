<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation effect="fade" time="75">WindowOpen</animation>
	<animation effect="fade" time="150">WindowClose</animation>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<left>400</left>
            <top>80r</top>
            <control type="image">
				<description>background image</description>
				<left>0</left>
				<top>0</top>
				<width>270</width>
				<height>50</height>
				<texture  border="15">ContentPanel.png</texture>
			</control>
			<control type="label" id="1" description="Progress label">
				<visible>IntegerGreaterThan(Control.GetLabel(10), 0)</visible>
				<left>20</left>
				<top>13</top>
				<width>230</width>
				<height>32</height>
				<align>center</align>
				<textcolor>white</textcolor>
				<font>font12</font>
				<label>$INFO[Control.GetLabel(10), ,%] STANDING BY...</label>
			</control>
			<control type="label">
				<description>Busy label</description>
				<visible>!IntegerGreaterThan(Control.GetLabel(10), 0)</visible>
				<left>20</left>
				<top>13</top>
				<width>230</width>
				<height>32</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>STANDING BY...</label>
				<font>font12</font>
			</control>
			<control type="progress" id="10">
				<description>Progressbar</description>
				<left>20</left>
				<top>42</top>
				<width>220</width>
				<height>8</height>
		        <texturebg>-</texturebg>
				<midtexture>-</midtexture>
				<righttexture>-</righttexture>
				<lefttexture>-</lefttexture>
			</control>
		</control>
	</controls>
</window>
