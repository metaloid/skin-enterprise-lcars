<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">7</defaultcontrol>
	<onload condition="!Skin.HasSetting(Hide.Favourites)">RunScript(script.favourites)</onload>
	<onunload condition="Container(9000).Hasfocus(10) | Container(9000).Hasfocus(11) | ControlGroup(9010).HasFocus | ControlGroup(9016).HasFocus | ControlGroup(9017).HasFocus">SetProperty(VideosDirectLink,True)</onunload>
	<onunload condition="Control.HasFocus(9000) + Container(9000).Hasfocus(2)">ClearProperty(VideosDirectLink)</onunload>
	<controls>
		<include>CommonBackground</include>
		<include>HomeRecentlyAddedInfo</include>
		<include>wbg</include>
		<include>Clock</include>
		<control type="grouplist">
            <visible>!Skin.HasSetting(HomeMenuNodata)</visible>
			<left>100</left>
            <top>630</top>
            <width>1000</width>
			<height>30</height>
			<orientation>horizontal</orientation>
			<align>left</align>
			<itemgap>10</itemgap>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[Window.Property(Movies.Count),, $LOCALIZE[342] ]</label>
				<visible>!Skin.HasSetting(HomeMenuNoMovieButton)</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[Window.Property(TVShows.Count),, $LOCALIZE[20343] ]</label>
				<visible>!Skin.HasSetting(HomeMenuNoTVShowButton)</visible>
			</control>
			<control type="label">
				<include>WindowTitleCommons2</include>
				<label>$INFO[Window.Property(Music.SongsCount),, $LOCALIZE[134] ]</label>
				<visible>!Skin.HasSetting(HomeMenuNoMusicButton)</visible>
			</control>
		</control>
		
			<control type="grouplist" id="9000">
				<right>20</right>
				<top>80</top>
				<width>200</width>
				<height>500</height>
				<onleft>888</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<itemgap>5</itemgap>
				<!--MOVIES-->
				<control type="button" id="1">
                    <visible>!Skin.HasSetting(HomeMenuNoMovieButton) + Library.HasContent(Movies)</visible>
					<include>ButtonCommonValues</include>
					<label>342</label>
                    <onclick condition="Library.HasContent(Movies)">ActivateWindow(Videos,MovieTitles,return)</onclick>
                    <onclick condition="!Library.HasContent(Movies)">ActivateWindow(Videos,root)</onclick>
				</control>
                <!--TVSHOWS-->
 				<control type="button" id="2">
                    <visible>!Skin.HasSetting(HomeMenuNoTVShowButton) + Library.HasContent(TVShows)</visible>
					<include>ButtonCommonValues</include>
					<label>20343</label>
                    <onclick condition="Library.HasContent(TVShows)">ActivateWindow(VideoLibrary,TVShowTitles,return)</onclick>
                    <onclick condition="!Library.HasContent(TVShows)">ActivateWindow(Videos,root)</onclick>
				</control>
                <!--MUSIC-->
 				<control type="button" id="3">
                    <visible>!Skin.HasSetting(HomeMenuNoMusicButton)</visible>
					<include>ButtonCommonValues</include>
					<label>2</label>
                    <onclick condition="!Library.HasContent(Music)">ActivateWindow(501,root,return)</onclick>
                    <onclick condition="Library.HasContent(Music)">ActivateWindow(502,return)</onclick>
				</control>
                <!--ADDONS-->
 				<control type="button" id="4">
                    <visible>!Skin.HasSetting(HomeMenuNoProgramsButton)</visible>
					<include>ButtonCommonValues</include>
					<label>24001</label>
                    <onclick>ActivateWindow(AddonBrowser.xml)</onclick>
				</control>
                <!--LIVETV-->
 				<control type="button" id="5">
                    <visible>PVR.HasTVChannels</visible>
					<include>ButtonCommonValues</include>
					<label>19020</label>
                    <onclick>ActivateWindow(TVChannels)</onclick>
                    <onclick>noop</onclick>
				</control>
 				<control type="button" id="14">
					<visible>PVR.HasRadioChannels</visible>
					<include>ButtonCommonValues</include>
					<label>31960</label>
					<onclick>ActivateWindow(RadioChannels)</onclick>
				</control>
				<!--PICTURES-->
 				<control type="button" id="6">
                    <visible>!Skin.HasSetting(HomeMenuNoPicturesButton)</visible>
					<include>ButtonCommonValues</include>
					<label>1</label>
                    <onclick>ActivateWindow(Pictures)</onclick>
                    <onclick>noop</onclick>
				</control>
                <!--SOURCES-->
 				<control type="button" id="7">
					<include>ButtonCommonValues</include>
					<label>20094</label>
                    <onclick>noop</onclick>
				</control>
                <!--WEATHER-->
 				<control type="button" id="8">
                    <visible>!Skin.HasSetting(HomeMenuNoWeatherButton)</visible>
					<include>ButtonCommonValues</include>
					<label>31950</label>
                    <onclick>ActivateWindow(MyWeather)</onclick>
				</control>
                <!--NEXT AIR-->
 				<control type="button" id="9">
                    <visible>!Skin.HasSetting(HomeMenuNoNEXTAIRButton)</visible>
                    <visible>!Skin.HasSetting(nextair) + System.HasAddon(script.tv.show.next.aired) + Library.HasContent(TVShows)</visible>
					<include>ButtonCommonValues</include>
					<label>next air</label>
                    <onclick>RunAddon(script.tv.show.next.aired)</onclick>
				</control>
                <!--Favorites-->
 				<control type="button" id="10">
                    <visible>!Skin.HasSetting(HomeMenuNoFavoritesButton)</visible>
					<include>ButtonCommonValues</include>
					<label>1036</label>
                    <onclick>ActivateWindow(134)</onclick>
				</control>
                <!--Settings-->
 				<control type="button" id="11">
					<include>ButtonCommonValues</include>
					<label>1390</label>
                    <onclick>ActivateWindow(Settings)</onclick>
				</control>
                <!--EXIT-->
 				<control type="button" id="12">
					<visible>!Player.HasMedia</visible>
					<include>ButtonCommonValues</include>
					<label>exit</label>
                    <onclick>ActivateWindow(ShutdownMenu)</onclick>
				</control>
				<include>CommonNowPlaying_Controls</include>
 				<control type="button" id="611">
					<visible>Player.HasMedia</visible>
					<include>ButtonCommonValues</include>
					<label>31008</label>
                    <onclick>fullscreen</onclick>
				</control>
			</control>
		<control type="group">
			<left>0</left>
			<top>60r</top>
			<visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
			<include>Window_OpenClose_Animation</include>
			<control type="rss">
				<description>RSS feed</description>
				<left>100</left>
				<top>0</top>
				<height>30</height>
				<width>845</width>
				<font>font13</font>
				<urlset>1</urlset>
				<textcolor>blue</textcolor>
				<titlecolor>blue</titlecolor>
				<headlinecolor>white</headlinecolor>
			</control>
		</control>
	</controls>
</window>
