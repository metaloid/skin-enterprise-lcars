<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu">
	<defaultcontrol>9001</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="button" id="9001">
			<description>Make sure we hit the first button in the group list and not the close window button</description>
			<left>-16</left>
			<top>-16</top>
			<width>4</width>
			<height>4</height>
			<label>-</label>
			<font>-</font>
			<onfocus>down</onfocus>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>2</ondown>
		</control>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<texture>black-back.png</texture>
		</control>
		<control type="grouplist" id="9000">
			<right>20</right>
			<top>95</top>
			<width>200</width>
			<height>475</height>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<itemgap>0</itemgap>
			<align>left</align>
			<control type="group" id="1">
				<control type="image">
					<width>200</width>
					<height>475</height>
					<aspectratio>scale</aspectratio>
					<texture>black.png</texture>
				</control>
			</control>
			<control type="button" id="2">
				<description>Exit button</description>
				<include>ButtonCommonValues</include>
				<onclick>Quit()</onclick>
				<label>13012</label>
				<visible>System.ShowExitButton</visible>
			</control>
			<control type="button" id="3">
				<description>Shutdown button</description>
				<include>ButtonCommonValues</include>
				<onclick>Powerdown()</onclick>
				<visible>System.CanPowerDown</visible>
				<label>13016</label>
			</control>
			<control type="button" id="4">
				<description>Custom Shutdown Timer</description>
				<include>ButtonCommonValues</include>
				<onclick>AlarmClock(shutdowntimer,Shutdown())</onclick>
				<label>Shutdown Timer</label>
				<visible>!System.HasAlarm(shutdowntimer)</visible>
				<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
			</control>
			<control type="button" id="5">
				<description>Cancel Shutdown Timer</description>
				<include>ButtonCommonValues</include>
				<onclick>CancelAlarm(shutdowntimer)</onclick>
				<label>20151</label>
				<visible>System.HasAlarm(shutdowntimer)</visible>
			</control>
			<control type="button" id="6">
				<description>Suspend button</description>
				<include>ButtonCommonValues</include>
				<onclick>Suspend()</onclick>
				<visible>System.CanSuspend</visible>
				<label>13011</label>
			</control>
			<control type="button" id="7">
				<description>Hibernate button</description>
				<include>ButtonCommonValues</include>
				<onclick>Hibernate()</onclick>
				<visible>System.CanHibernate</visible>
				<label>13010</label>
			</control>
			<control type="button" id="8">
				<description>Reboot button</description>
				<include>ButtonCommonValues</include>
				<onclick>Reset()</onclick>
				<visible>System.CanReboot</visible>
				<label>13013</label>
			</control>
			<control type="button" id="9">
				<description>Logoff button</description>
				<include>ButtonCommonValues</include>
				<onclick>dialog.close(all,true)</onclick>
				<onclick>System.LogOff</onclick>
				<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
				<visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
				<visible>System.Loggedon</visible>
			</control>
			<control type="togglebutton" id="10">
				<description>Master mode button</description>
				<include>ButtonCommonValues</include>
				<alttexturefocus>-</alttexturefocus>
				<alttexturenofocus>-</alttexturenofocus>
				<label>20046</label>
				<altlabel>20045</altlabel>
				<textoffsetx>7</textoffsetx>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<usealttexture>!System.IsMaster</usealttexture>
				<alttexturefocus>-</alttexturefocus>
				<alttexturenofocus>-</alttexturenofocus>
				<onclick>mastermode</onclick>
				<pulseonselect>no</pulseonselect>
				<visible>System.HasLocks</visible>
			</control>
			<control type="group" id="11">
				<width>190</width>
				<height>70</height>
				<visible>System.HasAlarm(shutdowntimer)</visible>
				<control type="image">
					<description>background top image</description>
					<left>0</left>
					<top>0</top>
					<width>190</width>
					<height>70</height>
					<texture border="25,5,25,5">DialogContextMiddle.png</texture>
				</control>
				<control type="textbox">
					<left>25</left>
					<top>22</top>
					<width>190</width>
					<height>48</height>
					<font>font16</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<align>left</align>
					<label>$LOCALIZE[31329] [B]$INFO[System.Alarmpos][/B]</label>
				</control>
			</control>
			<control type="button" id="12">
				<description>Inhibit idle shutdown</description>
				<include>ButtonCommonValues</include>
				<onclick>InhibitIdleShutdown(true)</onclick>
				<label>13017</label>
				<visible>System.HasShutdown +!System.IsInhibit</visible>
			</control>
			<control type="button" id="13">
				<description>Allow idle shutdown</description>
				<onclick>InhibitIdleShutdown(false)</onclick>
				<include>ButtonCommonValues</include>
				<label>13018</label>
				<visible>System.HasShutdown + System.IsInhibit</visible>
			</control>
			
		</control>
	</controls>
</window>
